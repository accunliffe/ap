extends layout

block content
  .container-fluid.sitewrapper
    .vidcover.visible-desktop#trigger
      img#logo(src='/images/logo2.png')
      h2 Andrew Cunliffe Design Engineer                              
    video#vid.visible-desktop(autoplay='', loop='', poster='/images/jump1.png')
      source(src='/videos/jump.webm', type='video/webm')   
  .container-fluid.maindiv#main
    nav#nav.navbar.navbar-default.row-fluid(role='navigation')
      .rmenu
        img.logo3(src='/images/logo3.png')
        h3.navtext.hidden-phone Andrew Cunliffe Design Engineer 
        img.pointer(type='button', data-toggle='dropdown', src='/images/3lines.png')
        ul#menu.dropdown-menu.dropdown-menu-right(role='menu', aria-labelledby='dropdownMenu1')
          li.divider(role='presentation')
          li(role='presentation')  
            form(role='form')
              .form-group
                input#exampleInputEmail1.form-control(type='search', placeholder='Search')
          li.divider(role='presentation')
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#', data-id='div2') Dictionary
          li.divider(role='presentation')
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#') Thesarus  
          li.divider(role='presentation')
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#') Word Dynamo
          li.divider(role='presentation')
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#') Quotes
          li.divider(role='presentation')
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#') Reference
          li.divider(role='presentation')
          li(role='presentation')
            a(role='menuitem', tabindex='-1', href='#') Translator
          li.divider(role='presentation')
          li(role='presentation')  
            form(role='form')
              .form-group
                label(for='exampleInputEmail1') Email address
                input#exampleInputEmail1.form-control(type='emai', placeholder='Enter email')
              .form-group
                label(for='exampleInputPassword1') Password
                input#exampleInputPassword1.form-control(type='passwor', placeholder='Password')      
    .jumbotron#main.container-fluid
      .content.container-fluid
        #div1.pbox First Div
        #div2.pbox Second Div
        #div3.pbox Third Div
        #div4.pbox Fourth Div
    nav#footer.navbar.navbar-default.row-fluid
      
  script(src='/javascripts/jquery/jquery-2.0.3.min.js')
  script(src="/javascripts/jquery.scrollTo.js") 
  script(src="/javascripts/jquery.localScroll.js")
  script(src="/javascripts/bootstrap.min.js")

  script.
    $(document).ready(function () {
    $('#menu').on('click', 'a', function () {
        $('.current').not($(this).closest('li').addClass('current')).removeClass('current');
        // fade out all open subcontents
        $('.pbox:visible').hide(600);
        // fade in new selected subcontent
        $('.pbox[id=' + $(this).attr('data-id') + ']').show(600);
        });
    });  
  script.
    $('#logo').click(function() {
    $('#trigger').fadeOut(800, function() { $(this).remove(); });
    });
  script.
    $('#logo').click(function() {
    $('#vid').fadeOut(800, function() { $(this).remove(); });
    });
  script.
    $(function() {
    $('#main').hide();
    });
  script.
    $('#logo').click(function() {
    $('#main').fadeIn(3000, function() { $(this).add(); });
    });